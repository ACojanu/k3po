property invalidCredentials ${http:loginBase64Encoder("baduser:badpass")}
property authHeader1 ${http:append("Basic ", invalidCredentials)}
property goodCredentials ${http:loginBase64Encoder("joe:welcome")}
property authHeader2 ${http:append("Basic ", goodCredentials)}
connect http://localhost:8000/resource
connected

write method "GET"
write header "Authorization" ${authHeader1}
write close

read status "401" "Unauthorized"
read header "WWW-Authenticate" "Basic realm=" /.*/
read notify FIRST_REQUEST_COMPLETE

connect await FIRST_REQUEST_COMPLETE
connect http://localhost:8000/resource
connected

write method "GET"
write header "Authorization" ${authHeader2}
write close

read status "200" "OK"

