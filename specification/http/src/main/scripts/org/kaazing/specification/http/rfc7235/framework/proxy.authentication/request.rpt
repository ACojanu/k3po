property goodCredentials ${http:loginBase64Encoder("joe:welcome")}
property proxyAuthHeader ${http:append("Basic", goodCredentials)}
connect http://localhost:8000/resource
connected

write method "GET"
write close

read status "407" "Proxy Authentication Required"
read header "Proxy-Authenticate" "Basic realm=" /.*/

connect http://localhost:8000/resource
connected

write method "GET"
write header "Proxy-Authorization" ${proxyAuthHeader}
write close

read status "200" "OK"

