accept tcp://127.0.0.1:8001
accepted
connected

# Connection request
read "GET /echo HTTP/1.1\r\n"
read "Upgrade: websocket\r\n"
read "Connection: Upgrade\r\n"
read "Host: localhost:8001\r\n"
read "Origin: http://localhost:8001\r\n"
read "Sec-WebSocket-Key: ePYyZxvR5fDLh/oEugMjbA==\r\n"
read "Sec-WebSocket-Version: 13\r\n"
read "Sec-WebSocket-Extensions: x-kaazing-idle-timeout,x-kaazing-ping-pong\r\n"
read "\r\n"

# 101 Response 

write "HTTP/1.1 101 Web Socket Protocol Handshake\r\n"
write "Connection: Upgrade\r\n"
write "Date: Fri, 31 Dec 1999 23:59:59 GMT\r\n"
write "Sec-WebSocket-Accept" "TXCKJSpylVJ7v9ZGLGbt58vypzE=\r\n"
write "Sec-WebSocket-Extensions: x-kaazing-idle-timeout; timeout=2000\r\n"
write "Sec-WebSocket-Extensions: x-kaazing-ping-pong; 01010102\r\n"
write "Server: Kaazing Gateway\r\n"
write "Upgrade: websocket\r\n"
write "\r\n"

write notify HANDSHAKE_COMPLETE

################################################################
# Expect random data flowing from client 
read [0x82 0x02 0x11 0x11]

# Write first PONG frame @ TICK_ONE within the timeout frequency
write await TICK_ONE

# Send extended PONG
write [0x81 0x06 0x01 0x01 0x01 0x02 0x0a 0x00]
################################################################
# Expect random data flowing from client 
read [0x82 0x02 0x11 0x11]

# Write second PONG frame @ TICK_TWO within the timeout frequency
write await TICK_TWO

# Send extended PONG
write [0x81 0x06 0x01 0x01 0x01 0x02 0x0a 0x00]
################################################################

closed